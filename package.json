{
  "name": "moonbase-monorepo",
  "private": true,
  "scripts": {
    "start:client": "npm --prefix client start",
    "start:server": "npm --prefix server start",
    "start": "npm --prefix client start",
    "dev": "npm --prefix client start",
    "build:client": "npm --prefix client run build",
    "copy:docs": "rm -rf docs && cp -R client/build docs",
    "prepare-pages": "npm run build:client && npm run copy:docs"
  },
  "dependencies": {
    "framer-motion": "^12.23.24",
    "ogl": "^1.0.11",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.9.3"
  }
}
